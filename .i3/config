mode "go [tTsS]" {

# Move focus to previous/next workspace
    bindsym t workspace next_on_output; mode "default"
    bindsym Shift+T workspace prev_on_output; mode "default"

# Move foucs to previous/next screen
    bindsym s focus output right; mode "default"
    bindsym Shift+S focus output left; mode "default"

# Move workspace left/right
    bindsym h move workspace to output left; mode "default"
    bindsym l move workspace to output right; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Ctrl-C mode "default"
    bindsym $mod+g mode "default"
}
bindsym $mod+g mode "go [tTsS]"


# resize window (you can also use the mouse for that)
mode "resize [hjkl]" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.

    ## Vim-ized:
    bindsym h resize shrink width 5px or 2 ppt
    bindsym j resize grow height 5 px or 2 ppt
    bindsym k resize shrink height 5 px or 2 ppt
    bindsym l resize grow width 5 px or 2 ppt

    ## same bindings, but for the arrow keys
    bindsym 113 resize shrink width 5 px or 2 ppt
    bindsym 116 resize grow height 5 px or 2 ppt
    bindsym 111 resize shrink height 5 px or 2 ppt
    bindsym 114 resize grow width 5 px or 2 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Ctrl-C mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize [hjkl]"


